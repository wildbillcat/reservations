<% title "Login Settings" %>

<%= simple_form_for @app_config, :url => url_for( :action => "create_app_configs", :controller => "application_setup"), :html => { :class => "form-horizontal" } do |f| %>
	
<%= f.input :auth_provider, :collection => ["CAS", "Identity"], :label => "Authorization Provider", :required => :true %>

<%= f.input :ldap_host %>
<%= f.input :ldap_port %>
<%= f.input :ldap_login %>
<%= f.input :ldap_base_query %>
<%= f.input :ldap_first_name %>
<%= f.input :ldap_last_name %>
<%= f.input :ldap_phone %>
<%= f.input :ldap_email %>

<div class="form-actions">
<%= f.button :submit %></p>
</div>

<% end %>
